<odoo>
    <record id="view_test_nuova_tabella_tree" model="ir.ui.view">
        <field name="name">test.nuova_tabella.tree</field>
        <field name="model">test.nuova_tabella</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />    
            </tree>
        </field>
    </record>

    <record id="view_test_nuova_tabella_form" model="ir.ui.view">
        <field name="name">test.nuova_tabella.form</field>
        <field name="model">test.nuova_tabella</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                       <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_test_nuova_tabella" model="ir.actions.act_window">
        <field name="name">Test Nuova Tabella</field>
        <field name="res_model">test.nuova_tabella</field> 
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_test_vecchio_root"
        name="Test App Migration (Updated)" />
    
    <menuitem
        id="menu_test_vecchio_action"
        name="Dati Nuova Tabella"
        parent="menu_test_vecchio_root"
        action="action_test_nuova_tabella"
        sequence="10"
        />
</odoo>
